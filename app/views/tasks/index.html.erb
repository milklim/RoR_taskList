<div>
  <% if user_signed_in? %>
      <span>Здравствуйте, <%= current_user.email %></span>
      <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
  <% else %>
      <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Регистрация', new_user_registration_path %>
  <% end %>
</div>
<hr>

<%if current_user %>
<div>
  <%= link_to 'New task', 'tasks/new' %>
  <% @tasks.each do |task| %>
    <% if (task.user_id == current_user.id)  %>
      <div>
        <%= task.name %>
        <%= link_to 'Update', edit_task_path(id: task.id) %>
        <%= link_to 'Delete', del_task_path(id: task.id), method: :delete %>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>